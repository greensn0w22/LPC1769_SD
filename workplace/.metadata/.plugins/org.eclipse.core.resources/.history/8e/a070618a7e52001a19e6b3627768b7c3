#include <stdint.h>
#include <stdbool.h>
#include "spi.h"
#include "LPC176x.h"

/**************************************
 *		PRIVATE DEFENITION
 *************************************/

/**************************************
 *		PRIVATE DECLARATION
 *************************************/

/**************************************
 *		PRIVATE STRUCTURE
 *************************************/

/**************************************
 *		PUBLIC	FUNCTIONS
 *************************************/
	bool initSPI(void){
		__set_PCONP(PCSSP1,1);
		__set_PCLKSEL(PCLK_SSP1, PCLKDIV_4);

		__set_PINSEL(0,6,2);





		return true;
	}
/**************************************
 *		PRIVATE FUNCTIONS
 *************************************/
