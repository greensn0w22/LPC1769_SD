#include "board.h"
#include <cr_section_macros.h>
#include "spi.h"

static void CoreInit(void){
    SystemCoreClockUpdate();
    Board_Init();
    Board_LED_Set(0, true);
}


int main(void) {
	CoreInit();
    volatile static int i = 0 ;

    initSPI();
    unsigned char dummy = 0;


    while(1) {
        dummy++;
    	SSP1DR = dummy;
    	while((SSP1RIS&0x4) == false){}
    	dummy = SSP1DR;
    	i++ ;
    }
    return 0 ;
}



