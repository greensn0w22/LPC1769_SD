#include "board.h"
#include <cr_section_macros.h>
#include "spi.h"

static void CoreInit(void){
    SystemCoreClockUpdate();
    Board_Init();
    Board_LED_Set(0, true);
}


int main(void) {
	CoreInit();
    volatile static int i = 0 ;

    spi_init();
    uint16_t dummy = 0;
    uint16_t dataIn = 0x15FA;
    while(1) {
    	dummy = spi_16bitTransfert(dataIn);
    	i++ ;
    }
    return 0 ;
}



