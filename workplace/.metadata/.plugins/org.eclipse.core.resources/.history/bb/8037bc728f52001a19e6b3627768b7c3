/**************************************
 *			INCLUDES
 *************************************/
#include <stdint.h>
#include <stdbool.h>
#include "spi.h"
#include "LPC176x.h"

/**************************************
 *		PRIVATE DEFENITION
 *************************************/


/**************************************
 *		PRIVATE DECLARATION
 *************************************/
static uint8_t spi_rw(uint8_t dataByte);
/**************************************
 *		PRIVATE STRUCTURE
 *************************************/
/**************************************
 *		PRIVATE FUNCTIONS
 *************************************/

/**************************************
 *		PUBLIC	FUNCTIONS
 *************************************/
	bool spi_init(void){

		__set_PCONP(PCSSP1,1);
		__set_PCLKSEL(PCLK_SSP1, PCLKDIV_4);

		__set_PINSEL(0,6,2);
		__set_PINSEL(0,7,2);
		__set_PINSEL(0,8,2);
		__set_PINSEL(0,9,2);

		__set_PINMODE(0,6,2);
		__set_PINMODE(0,7,2);
		__set_PINMODE(0,8,2);
		__set_PINMODE(0,9,0);

		__set_PINOD(0,6,0);
		__set_PINOD(0,7,0);
		__set_PINOD(0,8,0);

		SSP1CPSR = 60;
		SSP1CR0 = 0x0107;
		SSP1CR1 = 2;

		return true;
	}

static uint8_t spi_rw(uint8_t dataByte){
    uint8_t dataToReturn = 0;
	SSP1DR = dataByte;
	while(BSY){}
	dataToReturn = SSP1DR;
	return dataToReturn;
}
